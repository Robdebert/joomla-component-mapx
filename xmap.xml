<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0" method="upgrade">
    <name>COM_XMAP</name>
    <creationDate>2015-03-01</creationDate>
    <author>Branko Wilhelm</author>
    <copyright>Copyright (c) 2015 Branko Wilhelm</copyright>
    <license>GNU/GPLv3 http://www.gnu.org/licenses/gpl-3.0.html</license>
    <authorEmail>branko.wilhelm@gmail.com</authorEmail>
    <authorUrl>www.z-index.net</authorUrl>
    <version>3.0 @REVISION@</version>
    <description>Xmap - Sitemap Generator for Joomla!</description>
    <install folder="admin">
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>
    <update>
        <schemas>
            <schemapath type="mysql">sql/updates/mysql</schemapath>
        </schemas>
    </update>
    <scriptfile>script.installer.php</scriptfile>
    <updateservers>
        <server type="collection" priority="1" name="z-index development">http://www.z-index.net/en/extensions.xml</server>
    </updateservers>
    <files folder="site">
        <folder>controllers</folder>
        <folder>displayer</folder>
        <folder>helpers</folder>
        <folder>models</folder>
        <folder>views</folder>
        <filename>controller.php</filename>
        <filename>router.php</filename>
        <filename>xmap.php</filename>
    </files>
    <languages folder="site/language">
        <language tag="en-GB">en-GB/en-GB.com_xmap.ini</language>
        <language tag="de-DE">en-GB/en-GB.com_xmap.ini</language>
        <language tag="es-ES">es-ES/es-ES.com_xmap.ini</language>
        <language tag="fa-IR">fa-IR/fa-IR.com_xmap.ini</language>
        <language tag="cs-CZ">cs-CZ/cs-CZ.com_xmap.ini</language>
        <language tag="nl-NL">nl-NL/nl-NL.com_xmap.ini</language>
        <language tag="ru-RU">ru-RU/ru-RU.com_xmap.ini</language>
    </languages>
    <administration>
        <menu>COM_XMAP_TITLE</menu>
        <files folder="admin">
            <folder>install</folder>
            <folder>helpers</folder>
            <folder>controllers</folder>
            <folder>tables</folder>
            <folder>views</folder>
            <folder>models</folder>
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <filename>controller.php</filename>
            <filename>xmap.php</filename>
        </files>
        <languages folder="admin/language">
            <language tag="en-GB">en-GB/en-GB.com_xmap.ini</language>
            <language tag="en-GB">en-GB/en-GB.com_xmap.sys.ini</language>
            <language tag="de-DE">de-DE/de-DE.com_xmap.ini</language>
            <language tag="de-DE">de-DE/de-DE.com_xmap.sys.ini</language>
            <language tag="es-ES">es-ES/es-ES.com_xmap.ini</language>
            <language tag="es-ES">es-ES/es-ES.com_xmap.sys.ini</language>
            <language tag="fa-IR">fa-IR/fa-IR.com_xmap.ini</language>
            <language tag="fa-IR">fa-IR/fa-IR.com_xmap.sys.ini</language>
            <language tag="cs-CZ">cs-CZ/cs-CZ.com_xmap.ini</language>
            <language tag="cs-CZ">cs-CZ/cs-CZ.com_xmap.sys.ini</language>
            <language tag="nl-NL">nl-NL/nl-NL.com_xmap.ini</language>
            <language tag="nl-NL">nl-NL/nl-NL.com_xmap.sys.ini</language>
            <language tag="ru-RU">ru-RU/ru-RU.com_xmap.ini</language>
            <language tag="ru-RU">ru-RU/ru-RU.com_xmap.sys.ini</language>
        </languages>
    </administration>
</extension>
